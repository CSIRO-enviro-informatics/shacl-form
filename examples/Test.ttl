@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix : <http://example.org/ex#> .

:PersonShape1
    a sh:NodeShape ;
    sh:targetClass schema:Person ;
    sh:property [
        sh:path schema:givenName ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:description "The first name of a person. First character must be uppercase." ;
        sh:name "Given name" ;
        sh:defaultValue "Steve" ;
        sh:group :NameGroup1 ;
        sh:order 1 ;
        sh:maxLength 20 ;
        sh:pattern "[A-Z][a-z0-9_-]*" ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:familyName ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:description "The last name of a person. First character must be uppercase." ;
        sh:name "Family name" ;
        sh:group :NameGroup1 ;
        sh:pattern "[A-Z][a-z0-9_-]*" ;
        sh:disjoint schema:givenName ;
        sh:order 2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:birthDate ;
        sh:nodeKind sh:Literal ;
        sh:name "Birth Date" ;
        sh:datatype xsd:date ;
        sh:lessThanOrEquals schema:deathDate ;
        sh:order 1 ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:group :DateGroup1 ;
    ] ;
    sh:property [
        sh:path :birthTime ;
        sh:nodeKind sh:Literal ;
        sh:name "Time of Birth" ;
        sh:datatype xsd:time ;
        sh:order 2 ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:group :DateGroup1 ;
    ] ;
    sh:property [
        sh:path schema:deathDate ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:group :DateGroup1 ;
        sh:order 3 ;
    ] ;
    sh:property [
        sh:path schema:gender ;
        sh:nodeKind sh:Literal ;
        sh:in ( "male"  "female" "other" ) ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 1 ;
    ] ;
    sh:property [
        sh:path foaf:mbox ;
        sh:nodeKind sh:Literal ;
        sh:name "Email Address" ;
        sh:maxCount 1 ;
        sh:order 2 ;
    ] ;
    sh:property [
        sh:path foaf:phone ;
        sh:nodeKind sh:Literal ;
        sh:name "Phone Number" ;
        sh:maxCount 1 ;
        sh:order 3 ;
    ] ;
    sh:property [
        sh:minCount 1 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:order 4 ;
        sh:node :AddressShape ;
    ] ;
    sh:property [
        sh:path :gpa ;
        sh:nodeKind sh:Literal ;
        sh:name "GPA" ;
        sh:description "A number between 1 and 7." ;
        sh:minInclusive 1 ;
        sh:maxInclusive 7 ;
        sh:datatype xsd:integer ;
        sh:lessThan :goalGpa ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 5 ;
    ] ;
    sh:property [
        sh:path :goalGpa ;
        sh:nodeKind sh:Literal ;
        sh:name "Goal GPA" ;
        sh:description "A number between 1 and 7." ;
        sh:minInclusive 1 ;
        sh:maxInclusive 7 ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 6 ;
    ] ;
    sh:property [
        sh:path :likesDogs ;
        sh:nodeKind sh:Literal ;
        sh:name "Do you like dogs?" ;
        sh:datatype xsd:boolean ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 7 ;
    ] ;
    sh:property [
        sh:path :likesCats ;
        sh:nodeKind sh:Literal ;
        sh:name "Do you like cats?" ;
        sh:datatype xsd:boolean ;
        sh:equals :likesDogs ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

:NameGroup1
    a sh:PropertyGroup ;
    sh:order 1 ;
    rdfs:label "Name" .

:DateGroup1
    a sh:PropertyGroup ;
    sh:order 2 ;
    rdfs:label "Birth" .

:AddressShape
    a sh:NodeShape ;
    sh:path schema:address ;
    sh:name "Address" ;
    sh:property [
        sh:path schema:streetAddress ;
        sh:nodeKind sh:Literal ;
        sh:name "Street Address" ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 1 ;
    ] ;
    sh:property [
        sh:path schema:postalCode ;
        sh:nodeKind sh:Literal ;
        sh:name "Postcode" ;
        sh:datatype xsd:integer ;
        sh:minInclusive 10000 ;
        sh:maxInclusive 99999 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 2 ;
    ] .