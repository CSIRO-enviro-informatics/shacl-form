@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix : <http://example.org/ex#> .

:PersonShape1
    a sh:NodeShape ;
    sh:targetClass schema:Person ;
    sh:property [
        sh:path schema:givenName ;
        sh:datatype xsd:string ;
        sh:description "The first name of a person." ;
        sh:name "Given name" ;
        sh:group :NameGroup1 ;
        sh:order 1 ;
        sh:maxLength 20 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:familyName ;
        sh:datatype xsd:string ;
        sh:description "The last name of a person." ;
        sh:name "Family name" ;
        sh:group :NameGroup1 ;
        sh:order 2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:birthDate ;
        sh:datatype xsd:date ;
        sh:lessThanOrEquals schema:deathDate ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:group :DateGroup1 ;
        sh:order 1 ;
    ] ;
    sh:property [
        sh:path schema:deathDate ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:group :DateGroup1 ;
        sh:order 2 ;
    ] ;
    sh:property [
        sh:path schema:gender ;
        sh:in ( "male"  "female" ) ;
        sh:order 0 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:minCount 1 ;
        sh:node :AddressShape ;
    ] ;
    sh:property [
        sh:path foaf:mbox ;
        sh:name "Email Address" ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path :gpa ;
        sh:description "A number between 1 and 7." ;
        sh:minInclusive 1 ;
        sh:maxInclusive 7 ;
        sh:datatype xsd:integer ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path foaf:phone ;
    ] ;
    sh:property [
        sh:path :likesCats ;
        sh:datatype xsd:boolean ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path :likesDogs ;
        sh:datatype xsd:boolean ;
        sh:hasValue true ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

:NameGroup1
    a sh:PropertyGroup ;
    sh:order 1 ;
    rdfs:label "Name" .

:DateGroup1
    a sh:PropertyGroup ;
    sh:order 2 ;
    rdfs:label "Birth & Death Date" .

:AddressShape
    a sh:NodeShape ;
    sh:path schema:address ;
    sh:property [
        sh:path schema:postalCode ;
        sh:datatype xsd:integer ;
        sh:minInclusive 10000 ;
        sh:maxInclusive 99999 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 1 ;
    ] ;
    sh:property [
        sh:path schema:streetAddress ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 2 ;
    ] .